@model Web1.Models.CourseCategory
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/FormHome.cshtml";
}

<div class="container">
    <h1 class="display-4">New Course</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error", new { @class = "text-danger" })
    }

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name,
            htmlAttributes: new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Name,
               new
                    {
               htmlAttributes = new { @class = "form-control" }
               })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Describe,
            htmlAttributes: new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Describe,
               new
                    {
               htmlAttributes = new { @class = "form-control" }
               })
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
    }
</div>

